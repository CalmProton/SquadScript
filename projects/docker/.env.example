# ---------------------------------------------------------------------------
# Squad Game Server (cm2network/squad)
# ---------------------------------------------------------------------------
SQUAD_PORT=7787
SQUAD_QUERYPORT=27165
SQUAD_BEACONPORT=15000
SQUAD_RCONPORT=21114
SQUAD_MAXPLAYERS=80
SQUAD_MAXTICKRATE=50
SQUAD_MODS=()
SQUAD_SERVER_NAME=Squad Dedicated Server

# Set to your server's public IP if the host has multiple IP addresses.
# Leave empty for single-IP hosts.
SQUAD_MULTIHOME=

# ---------------------------------------------------------------------------
# SquadScript Server
# ---------------------------------------------------------------------------
LOG_LEVEL=info

# ---------------------------------------------------------------------------
# SquadScript App (Nuxt Dashboard)
# ---------------------------------------------------------------------------
APP_PORT=3000
APP_ADMIN_USERNAME=admin
APP_ADMIN_PASSWORD=admin
APP_SESSION_PASSWORD=change-me-to-a-random-secret-min-32-chars

# Optional runtime controls for squadscript-server
SQUADSCRIPT_HEALTH_PORT=8080
SQUADSCRIPT_RETRY_MS=5000
