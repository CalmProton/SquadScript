{
  "name": "@squadscript/server",
  "version": "0.0.1",
  "description": "SquadServer orchestrator for SquadScript - manages server state, events, and plugin lifecycle",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --external cpu-features && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "check-types": "tsc --noEmit",
    "dev": "bun --watch src/index.ts",
    "clean": "rm -rf dist",
    "test": "bun test"
  },
  "keywords": [
    "squad",
    "squadjs",
    "squadscript",
    "rcon",
    "game-server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elysiajs/bearer": "^1.4.3",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/server-timing": "^1.4.0",
    "@sinclair/typebox": "0.34.33",
    "@squadscript/config": "workspace:*",
    "@squadscript/log-parser": "workspace:*",
    "@squadscript/logger": "workspace:*",
    "@squadscript/rcon": "workspace:*",
    "@squadscript/types": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.25"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.9.2"
  }
}
